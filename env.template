# Environment variables for B2B Research Assistant
# Make a copy of this file named ".env" and fill in the values

# Required for OpenAI API access (used by company analysis and context analysis)
OPENAI_API_KEY=

# Default model to use (can be gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4

# Required for Google Search API (used by web searcher)
GOOGLE_API_KEY=
GOOGLE_CX=

# Optional additional Google API keys for rotation (to avoid rate limits)
GOOGLE_API_KEY_1=
GOOGLE_CX_1=
GOOGLE_API_KEY_2=
GOOGLE_CX_2=
GOOGLE_API_KEY_3=
GOOGLE_CX_3=

# Use mock data for testing (set to "true" or "false")
USE_MOCK_DATA=true

# Server configuration
PORT=5018
HOST=0.0.0.0

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Temperature for OpenAI API (0.0 to 1.0, lower is more deterministic)
TEMPERATURE=0.7

# Maximum tokens for OpenAI API responses
MAX_TOKENS=1000
